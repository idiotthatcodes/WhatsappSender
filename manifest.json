{
    "name": "Verstuur een WhatsApp bericht",
    "description": "Stuur WhatsApp berichten naar het geselecteerde nummer",
    "version": "1.0",
    "icons": {
        "16": "icon.png"
    },
    "permissions": ["contextMenus", "storage", "scripting"], 
    "background": {
        "service_worker": "sender.js"
    },
    "action": {
        "default_popup": "popup.html", 
        "default_icon": {
            "16": "icon.png"
        }
    },
    "manifest_version": 3
}
